<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home Page</title>
  <link rel="stylesheet" href="./asserts/css/main.css">
  <link rel="stylesheet" href="./asserts/css/contact.css">
</head>

<body>
  <!-- this include is used to add on the common header file -->
  <%- include('./common/header.ejs') %>

    <!-- contact us  -->
    <div class="container-fluid">
      <div class="row contact-navigation">
        <div class="col-12 mt-5">
          <h1 class="text-center text-white">Contact Us</h1>
          <h5 class="text-center text-white">Home/ Contact Us</h5>
        </div>
      </div>
    </div>

    <!-- ASK QUERY -->
    <section class="contact-us">
      <div class="container">
        <div class="row">
          <div class="col-lg-7">
            <form class="query" method="post" action="/contact">
              <h3 class="text-center">Ask Your Query</h3>
              <label for="name">Enter Name: </label>
              <input type="text" id="name" name="f_name" placeholder="Enter name" />

              <label for="pickup" class="pt-3">Enter E-mail: </label>
              <input type="email" id="pickup" name="email" placeholder="enter your mail" />

              <label for="pickup" class="pt-3">Enter Contact Number: </label>
              <input type="text" id="pickup" name="contact" placeholder="enter your phone number" />

              <label for="drop" class="pt-3">Enter Message: </label>
              <textarea style="width: 100%; height: 100px; padding-left: 20px" name="message" placeholder="your query"></textarea>

              <button class="btn p-2 w-25 btn-outline-primary">SUBMIT</button>
            </form>
          </div>

          <div class="col-lg-5 contact_detail query text-center">
            <h3>Get In Touch With Our Team</h3>
            <i class="fa-solid fa-phone icon"></i>
            <p>
              +91-9385475635/ +91-7213583729
            </p>

            <i class="fa-solid fa-envelope icon"></i>
            <p>
              workwave@gmail.com/ workwave@gmail.com
            </p>

            <i class="fa-solid fa-location-pin icon"></i>
            <p>
              Central Park, Sector 7, New Delhi<br />
              India
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- footer section design -->
    <%- include('./common/footer.ejs') %>
</body>

</html>


<!-- footer linking -->
